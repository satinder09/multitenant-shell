# ===============================================
# üöÄ MULTITENANT SHELL - ENVIRONMENT VARIABLES
# ===============================================
# Copy this file to .env and fill in your values
# This file contains all environment variables for the entire monorepo

# =============================================
# üåê GLOBAL CONFIGURATION
# =============================================
NODE_ENV=development
BASE_DOMAIN=lvh.me

# =============================================
# üñ•Ô∏è BACKEND CONFIGURATION (Port 4000)
# =============================================
# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/multitenant_master
TENANT_DATABASE_URL=postgresql://postgres:password@localhost:5432/multitenant_tenant_template
TENANT_DB_ENCRYPTION_KEY=your-super-secure-tenant-encryption-key-32-chars-long

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-change-in-production
JWT_EXPIRES_IN=1h

# Security
CORS_ORIGIN=http://lvh.me:3000
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Backend Server
PORT=4000
BACKEND_PORT=4000

# Cache
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_DEBUG_LOGGING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# =============================================
# üé® FRONTEND CONFIGURATION (Port 3000)
# =============================================
# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://lvh.me:4000
NEXT_PUBLIC_BACKEND_URL=http://lvh.me:4000

# Domain Configuration
NEXT_PUBLIC_BASE_DOMAIN=lvh.me
NEXT_PUBLIC_FRONTEND_PORT=3000
FRONTEND_PORT=3000

# Security
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Development
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# =============================================
# üìö DOCUMENTATION CONFIGURATION (Port 3001)
# =============================================
# Documentation Server
DOCS_PORT=3001
NEXT_PUBLIC_DOCS_URL=http://lvh.me:3001

# Domain Configuration
DOCS_DOMAIN=base
DOCS_CONFIG_PATH=./src/config/domains/base.config.ts

# Content Configuration
DOCS_CONTENT_PATH=./content
DOCS_ENABLE_SEARCH=true
DOCS_ENABLE_DARK_MODE=true

# API Documentation
DOCS_API_URL=http://lvh.me:4000
DOCS_ENABLE_API_DOCS=true

# =============================================
# üê≥ DOCKER CONFIGURATION (Optional)
# =============================================
# Database
POSTGRES_DB=multitenant_master
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=
REDIS_PORT=6379

# Application Ports
APP_PORT=4000
DEV_APP_PORT=4000

# Monitoring (Fixed port conflicts)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
LOKI_PORT=3100
TRAEFIK_DASHBOARD_PORT=8080

# =============================================
# üîÑ DEVELOPMENT CONFIGURATION
# =============================================
# Hot reload
WATCHPACK_POLLING=true
TURBO_TRACE=1

# Debugging
DEBUG=false
VERBOSE_LOGGING=false
DEV_DEBUG_PORT=9229

# =============================================
# üè∑Ô∏è DEPLOYMENT CONFIGURATION
# =============================================
# Build
BUILD_DATE=
GIT_COMMIT=
VERSION=1.0.0

# Domain (Production)
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

