{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,

    "outDir": "dist",
    "incremental": true,
    "useDefineForClassFields": false
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
